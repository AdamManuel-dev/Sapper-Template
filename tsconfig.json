{
	"compilerOptions": {
		"noImplicitThis": true,
		"noEmitOnError": true,
		"allowJs": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"importHelpers": true,
		"lib": [
			"DOM",
			"ES2017",
			"WebWorker"
		],
		"baseUrl": ".",
		"paths": {
			"@sapper/*": ["runtime/src/*"]
		},
		"target": "es2017",
		"allowSyntheticDefaultImports": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importsNotUsedAsValues": "error",
		"isolatedModules": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"strict": false,
		"types": [
			"svelte"
		],
	},
	"include": [
		"src/**/*",
		"src/node_modules/**/*"
	],
	"exclude": [
		"node_modules/*",
		"__sapper__/*",
		"static/*",
		"**.js"
	],
	"declaration": true
}